@{
    var i = 1;
    foreach (var item in ViewBag.lista)
    {
        i = i + 1;
    }
    var total = i - 1;
}

<div class="row">

	@foreach (var item in ViewBag.lista)
	{
		<div class="col-md-4">
			<img src="Uploads/@item" onclick="openModal();currentSlide(@i)" width="300" height="300" />
            <br /><br /><br />
		</div>
	}
	@foreach (var item2 in ViewBag.muestraPDF)
	{
		<div class="col-md-4">
			<a class="viewbag-muestrapdf-mostrarall-index" href="@Url.Action(
					"Index",
					"MostrarPDF",
					new{
					busqueda = item2
				},
				null
				)">
				<img src="@Url.Content("/Uploads/"+@item2)" width="300" height="300" />
			</a>
            <br /><br /><br />

		</div>

	}
    @foreach (var item3 in ViewBag.muestraComic)
	{
		<div class="col-md-4">
			<a href="@Url.Action(
					"Index",
					"LectorComic",
					new{
					busqueda = item3
				},
				null
				)">
				<img src="@Url.Content("/Uploads/"+@item3)" width="300" height="300" />
			</a>
            <br /><br /><br />

		</div>

	}
</div>

    