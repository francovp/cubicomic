@using (Html.BeginForm("SubirManga", "SubirImagen", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.Label("Categoría", htmlAttributes: new { @class = "control-label col-md-3" })
        <select name="categoria" class="form-control">
            <option value="-.shonen.-">Shōnen</option>
            <option value="-.josei.-">Josei</option>
            <option value="-.kodomo.-">Kodomo</option>
            <option value="-.seinen.-">Seinen</option>
            <option value="-.shojo.-">Shōjo</option>
        </select>
    </div>
    <div class="form-group">
        @Html.Label("Portada", htmlAttributes: new { @class = "control-label col-md-3" })
        <input class="btn btn-default" type="file" name="file" accept=".JPG,.PNG" />
    </div>
    <div class="form-group">
        @Html.Label("Subir las páginas", htmlAttributes: new { @class = "control-label col-md-3" })
            <input class="btn btn-default" type="file" multiple="multiple" name="comic" accept=".JPG,.PNG" />
    </div>
    <div class="form-group">
        <button class="btn btn-default" type="submit">Subir archivo</button>
    </div>
}

