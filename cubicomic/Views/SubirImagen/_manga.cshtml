
@{
    ViewBag.Title = "_manga";
}
@using ( Html.BeginForm("SubirManga", "SubirImagen", FormMethod.Post, new { enctype = "multipart/form-data" , @class = "form-horizontal", role = "form" }) )
{
    <div class="form-group">
        @Html.Label("Escribir un título:", htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-6">
            <input class="form-control" type="text" name="nombre" value="" />
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Categoría", htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-6">
            <select name="categoria" class="form-control">
            <option value="-.shonen.-">Shōnen</option>
            <option value="-.josei.-">Josei</option>
            <option value="-.kodomo.-">Kodomo</option>
            <option value="-.seinen.-">Seinen</option>
            <option value="-.shojo.-">Shōjo</option>
           </select>
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Portada", htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-6">
            <input class="btn btn-default" type="file" name="portada" accept=".JPG,.PNG" />
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Subir las páginas", htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-6">
            <input class="btn btn-default" type="file" multiple="multiple" name="manga" accept=".JPG,.PNG" />
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-default" type="submit">Subir</button>
    </div>
}

