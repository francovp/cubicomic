
@{
    ViewBag.Title = "_PDF";
}
@using (Html.BeginForm("subir", "SubirImagen", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.Label("Categoría", htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-6">
            <select name="categoria" class="form-control">
                <option value="-.accion.-">Acción</option>
                <option value="-.comedia.-">Comedia</option>
                <option value="-.terror.-">Terror</option>
                <option value="-.digital.-">Digital</option>
                <option value="-.+18.-">+18</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Elejir la(s) imagen(es)", htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-6">
            <input class="btn btn-default" type="file" multiple="multiple" name="comic" accept=".JPG,.PNG" />
        </div>
    </div>

    <div class="form-group">
        <button class="btn btn-default" type="submit">Subir</button>
    </div>
}
