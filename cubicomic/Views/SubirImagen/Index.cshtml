@{
    ViewBag.Title = "Subir Imagen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
   if (TempData["notice"] != null) {
   <text>
   <script type="text/javascript">
     alert('@TempData["notice"]');
   </script>
   </text>
   }
}

<div class="row">
    <div class="col-sm-9 col-centered formulario-subirimagen">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#imagen" data-toggle="tab">Subir Imagen</a></li>
            <li><a href="#pdf" data-toggle="tab">Subir PDF</a></li>
            <li><a href="#comic" data-toggle="tab">Subir comic</a></li>
            <li><a href="#manga" data-toggle="tab">Subir Manga</a></li>
        </ul>
        <br />
        <div id="myTabContent" class="tab-content">
            <div class="tab-pane active in" id="imagen">
                @using (Html.BeginForm("subir", "SubirImagen", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
                {
                    <div class="form-group">
                        @Html.Label("Categoría", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-4">
                            <select name="categoria" class="form-control">
                                <option value="-.accion.-">Acción</option>
                                <option value="-.comedia.-">Comedia</option>
                                <option value="-.terror.-">Terror</option>
                                <option value="-.digital.-">Digital</option>
                                <option value="-.+18.-">+18</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-4">
                            <input class="btn btn-default" type="file" multiple="multiple" name="file" accept=".JPG,.PNG" />
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-md-4">
                            <button class="btn btn-default" type="submit">Subir archivo</button>
                        </div>
                    </div>
                }
            </div>
            <div class="tab-pane fade" id="pdf">
                @Html.Partial("_PDF")
            </div>
            <div class="tab-pane fade" id="comic">
                @Html.Partial("_Comic")
            </div>
            <div class="tab-pane fade" id="manga">
                @Html.Partial("_manga")
            </div>
        </div>
        <h3>@ViewBag.Error</h3>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}