@{
    ViewBag.Title = "Subir Imagen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <ul class="nav nav-tabs">
    <li class="active"><a href="#imagen" data-toggle="tab">Subir Imagen</a></li>
    <li><a href="#pdf" data-toggle="tab">Subir PDF</a></li>
    <li><a href="#comic" data-toggle="tab">Subir comic/manga</a></li>
</ul>

<div id="myTabContent" class="tab-content">
    <div class="tab-pane active in" id="imagen">
        @using (Html.BeginForm("subir", "SubirImagen", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <label for="categoria">Categoria:</label>
            <select name="categoria">
                <option value="-.accion.-">Acción</option>
                <option value="-.comedia.-">Comedia</option>
                <option value="-.terror.-">Terror</option>
                <option value="-.digital.-">Digital</option>
                <option value="-.+18.-">+18</option>
            </select> 
            <input type="file" multiple="multiple" name="file" accept=".JPG,.PNG"  /> <button type="submit">Subir archivo</button>
        }
    </div>
    <div class="tab-pane fade" id="pdf">
        @Html.Partial("_PDF")
        </div>
    <div class="tab-pane fade" id="comic">
        @Html.Partial("_Comic")
        </div>
</div>
<h3>@ViewBag.Error</h3>